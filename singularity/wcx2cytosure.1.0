BootStrap: debootstrap
OSVersion: focal
MirrorURL: http://us.archive.ubuntu.com/ubuntu/


%environment
SHELL=/bin/bash
PATH=/opt/anaconda/bin:${PATH}
LC_ALL=C.UTF-8

%runscript
   echo "This is what happens when you run the container..."
   export PATH=/opt/anaconda/bin:${PATH}

%post
    sed -i 's/\(deb .*\)$/\1 universe/' /etc/apt/sources.list
    apt-get update 
    apt-get -y install build-essential git wget autoconf automake libhts-dev libz-dev libbz2-dev liblzma-dev libcurl4-openssl-dev libssl-dev
    apt-get -y install python3-pip

    cd /root/ && wget https://repo.continuum.io/miniconda/Miniconda3-latest-Linux-x86_64.sh
    cd /root/ && chmod 700 ./Miniconda3-latest-Linux-x86_64.sh
    cd /root/ && bash ./Miniconda3-latest-Linux-x86_64.sh -b -p /opt/anaconda/

    export PATH=/opt/anaconda/bin:${PATH}

    conda config --add channels defaults
    conda config --add channels conda-forge
    conda config --add channels bioconda

    git clone https://github.com/denrav99/WCX2CytoSure_.git /bin/wcx2cytosure
    cd /bin/wcx2cytosure && pip install -e .

